<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:clipChildren="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp"
            android:orientation="vertical"
            android:clipChildren="false"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                android:id="@+id/card_newspaper">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <ImageView
                        android:tint="#ff7b00"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_black_board_newspaper"
                        android:id="@+id/imageViewSchuelerzeitung" />

                    <TextView
                        android:id="@+id/textViewSchuelerzeitungTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/imageViewSchuelerzeitung"
                        android:layout_toRightOf="@+id/imageViewSchuelerzeitung"
                        android:text="freistunde.blog"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewSchuelerzeitungDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewSchuelerzeitungTitle"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/imageViewSchuelerzeitung"
                        android:layout_toRightOf="@+id/imageViewSchuelerzeitung"
                        android:text="Lies jetzt jetzt die neusten Artikel auf freistunde.blog" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="5dp"
                android:id="@+id/card_mensa">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp">

                    <ImageView
                        android:tint="#c10000"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="3dp"
                        android:src="@drawable/ic_black_board_mensa"
                        android:id="@+id/imageViewMensa" />

                    <TextView
                        android:id="@+id/textViewMensaTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageViewMensa"
                        android:layout_toRightOf="@+id/imageViewMensa"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Mensa Speiseplan"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textViewMensaDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewMensaTitle"
                        android:layout_toEndOf="@+id/imageViewMensa"
                        android:layout_toRightOf="@+id/imageViewMensa"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:textColor="#666666"
                        android:text="Schau dir jetzt den (hoffentlich) aktuellen Speiseplan für die Mensa an :D" />

                    <ImageView
                        android:id="@+id/imageViewPDFViewer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignTop="@+id/textViewMensaDescriptionPDF"
                        android:padding="3dp"
                        android:src="@drawable/ic_black_board_pdf_viewer" />

                    <TextView
                        android:id="@+id/textViewMensaDescriptionPDF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textViewMensaDescription"
                        android:layout_toEndOf="@+id/imageViewMensa"
                        android:layout_toRightOf="@+id/imageViewMensa"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:text="Solltest du ein älteres Gerät verwenden musst du eventuell einen PDF-Viewer installieren." />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/llClass"
            android:paddingTop="30dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"

            >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Klasse :"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/klasseTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="17sp"
                android:textColor="#3d3d3d"
                android:text="Keine Daten" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/llHour"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Stunde "
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/stundeTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="17sp"
                android:textColor="#3d3d3d"
                android:text="Keine Daten" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/llFach"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Fach :"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/fachTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="17sp"
                android:textColor="#3d3d3d"
                android:text="Keine Daten" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/llRoom"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Raum :"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/raumTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="17sp"
                android:textColor="#3d3d3d"
                android:text="Keine Daten" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/llAnnotation"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Bem. zur Vertretung :"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/annotationTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="17sp"
                android:textColor="#3d3d3d"
                android:text="Keine Daten" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/llVerFrom"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Verlegt von :"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/ver_fromTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="17sp"
                android:textColor="#3d3d3d"
                android:text="Keine Daten" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/llAnnotationLesson"
            android:padding="10dp">


            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Bem. zum Unterricht :"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="17sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/annotation_lessonTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="17sp"
                android:textColor="#3d3d3d"
                android:text="Keine Daten" />

        </LinearLayout>








    </LinearLayout>

</RelativeLayout>
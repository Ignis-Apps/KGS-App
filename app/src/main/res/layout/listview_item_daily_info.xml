<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listViewRl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorInfo"
    android:padding="6dip">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="?android:attr/listPreferredItemHeightSmall"
        android:layout_height="?android:attr/listPreferredItemHeightSmall"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:src="@drawable/ic_action_info_light"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dailyViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/icon"
        android:layout_toStartOf="@+id/icon"
        android:gravity="center_vertical"
        android:paddingLeft="7dp"
        android:paddingTop="3dp"
        android:text="Nachricht zum Tag"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/dailyViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dailyViewTitle"
        android:layout_toLeftOf="@+id/icon"
        android:layout_toStartOf="@+id/icon"
        android:paddingBottom="3dp"
        android:paddingLeft="7dp"
        android:text="LÃ¤dt ..."
        android:textColor="@android:color/white" />

</RelativeLayout>